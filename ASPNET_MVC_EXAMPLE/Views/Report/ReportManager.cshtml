@{
    ViewBag.Title = "Index";
}
<style>
    #taskCreate label {
        padding-top: 5px;
    }
    .modal-content{
        float:left;
    }

    .modal-dialog-height,
    .modal-content-height {
        height: auto;
    }


    .modal-dialog-width {
        width: 800px !important;
    }
</style>

<div class="container">
    <h2>Report</h2>
    <button class="btn btn-primary add-employee">Add new Employee</button>
</div>

<!-- Task Create popup -->
<div class="modal fade" id="addUser" tabindex="-1" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-dialog-height modal-dialog-width">
        <div class="modal-content modal-content-height">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Create new task (No validate)</h4>
            </div>

            <div class="modal-body">
                <div class="col-md-12 no-padding float-left">
                    <div class="col-md-3">
                        <label class="text-bold">Name :</label>
                    </div>
                    <div class="col-md-5">
                        <input type="text" placeholder="required" name="TaskName" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <span></span>
                    </div>
                </div>

                <div class="col-md-12 no-padding float-left margin-top-10">
                    <div class="col-md-3">
                        <label class="text-bold">Name in Japan :</label>
                    </div>
                    <div class="col-md-5">
                        <input type="text" placeholder="int please!" class="form-control" />
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>
                <div class="col-md-12 no-padding float-left margin-top-10">
                    <div class="col-md-3">
                        <label class="text-bold">Day of birth</label>
                    </div>
                    <div class="col-md-5">
                        <input type="date" placeholder="required" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <span></span>
                    </div>
                </div>
                <div class="col-md-12 no-padding float-left margin-top-10">
                    <div class="col-md-3">
                        <label class="text-bold">Gender</label>
                    </div>
                    <div class="col-md-5">
                        <label>
                            <input type="radio" name="gender" value="1" />
                            Male
                        </label>
                        <label>
                            <input type="radio" name="gender" value="0" />
                            Female
                        </label>
                    </div>
                    <div class="col-md-4">
                        <span></span>
                    </div>
                </div>
                <div class="col-md-12 no-padding float-left margin-top-10">
                    <div class="col-md-3">
                        <label class="text-bold">Note</label>
                    </div>
                    <div class="col-md-5">
                        <textarea></textarea>
                    </div>
                    <div class="col-md-4">
                        <span></span>
                    </div>
                </div>
                
            </div>

            <div class="modal-footer float-left col-md-12">
                <button type="button"
                        class="btn btn-success">
                    Create
                </button>
                <button type="button"
                        class="btn btn-default"
                        data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('.add-employee').click(function () {
            $('#addUser').modal('show');
        });
       
    });
</script>